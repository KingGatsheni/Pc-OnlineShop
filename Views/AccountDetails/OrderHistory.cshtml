@model IPagedList<OnlineShop.ViewModels.OrderHistoryViewModel>
@{
    ViewBag.Title = "OrderHistory";
}
@using PagedList.Mvc;
@using PagedList;
<div style=" margin-top:50px;">

    @{
        if (Model.Count() <= 0)
        {
            <div style="font-size: 250px; margin-left:500px; color: #E1EAE9">
                <i class="far fa-dizzy"></i>
                <h2 style="font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; margin-top:-50px; margin-left: -15px">
                    No History To Show
                </h2>

            </div>
        }
        else
        {
            foreach (var item in Model)
            {
                int count = 0;
                <div style="margin-left: 200px; margin-right:200px; background-color:white;">
                    <h3 style="padding-top:10px;padding-left:5px"> Orderno: #@item.SaleId</h3>
                    <h4 style="padding-top:10px;padding-left:5px"> DateOf Purchase:  @item.PurchasedOn </h4>
                    <hr />
                    <h4 style="margin-left:15px;font-weight:bold">Total: R @item.Total</h4>
                    <h5 style="margin-left:15px;padding-top:5px"> Order Items</h5>
                    @foreach (var data in item.SalesItems)
                    {
                        count++;
                        <ul>
                            <li style="font-size:18px;font-weight:bold;">
                                Item @count
                            </li>
                            <li style="font-size:18px;font-weight:bold;">
                                Price: R @data.ItemPrice
                            </li>
                            <li style="font-size:18px;font-weight:bold;">
                                Qty: @data.Quantity
                            </li>
                            <hr />
                        </ul>
                    }
                </div>
            }

        }
    }
<div style="margin-left:200px">
    @Html.PagedListPager(Model, page => Url.Action("OrderHistory", "AccountDetails", new { page, pageSize = Model.PageSize }))
    Showing @Model.FirstItemOnPage to @Model.LastItemOnPage of @Model.TotalItemCount Products
</div>
   
</div>
